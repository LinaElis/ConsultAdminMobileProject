      <Button x:Name="MenuProjects" Image="bag32.png" Text="   Projects" Clicked="MenuProjects_OnClicked" BackgroundColor="Transparent" TextColor="Black" FontSize="20" HorizontalOptions="Start" />
      <!--<Button x:Name="MenuLocations" Image="star32.png" Text="   Locations" Clicked="MenuLocations_OnClicked" BackgroundColor="Transparent" TextColor="Black" FontSize="20" HorizontalOptions="Start" />
      <Button x:Name="MenuTimeReports" Image="clock32.png" Text="   Time Reports" Clicked="MenuTimeReports_OnClicked" BackgroundColor="Transparent" TextColor="Black" FontSize="20" HorizontalOptions="Start" />
      <Button x:Name="MenuSettings" Image="spanner32.png" Text="   Settings" Clicked="MenuSettings_OnClicked" BackgroundColor="Transparent" TextColor="Black" FontSize="20" HorizontalOptions="Start" />-->
      <Button x:Name="MenuLogout" Image="stop32.png" Text="   Close (logout)" Clicked="MenuLogout_OnClicked" BackgroundColor="Transparent" TextColor="Black" FontSize="20" HorizontalOptions="Start" />
    </StackLayout>
  </ContentPage.Content>
