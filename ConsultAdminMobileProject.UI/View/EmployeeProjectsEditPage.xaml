<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:sys="clr-namespace:System;assembly=System.Runtime"
             x:Class="ConsultAdminMobileProject.UI.View.EmployeeProjectsEditPage">

  <ContentPage.Content>
    <ScrollView>
      <Grid Padding="10" BackgroundColor="White" RowSpacing="5" ColumnSpacing="2">
        <Grid.RowDefinitions>
          <RowDefinition Height="Auto" />
          <RowDefinition Height="Auto" />
          <RowDefinition Height="Auto" />
          <RowDefinition Height="Auto" />
          <RowDefinition Height="Auto" />
          <RowDefinition Height="Auto" />
          <RowDefinition Height="Auto" />
          <RowDefinition Height="Auto" />
          <RowDefinition Height="Auto" />
          <RowDefinition Height="Auto" />
          <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="3*" />
          <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Text="Choose existing client" HorizontalOptions="Center" FontFamily="Arial" FontAttributes="Bold" TextColor="Black" />
        <Picker Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" x:Name="ClientPicker" SelectedIndex="{Binding ClientIndex}" BackgroundColor="#666666" />
        <Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Text="{Binding ClientName}" HorizontalTextAlignment="Center" FontAttributes="Bold" />

        <Label Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Text="Choose existing project" HorizontalOptions="Center" FontFamily="Arial" FontAttributes="Bold" TextColor="Black" />
        <Picker Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" x:Name="ContractPicker" SelectedIndex="{Binding ContractIndex}" BackgroundColor="#666666" />
        <Label Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" Text="{Binding ContractName}" HorizontalTextAlignment="Center" FontAttributes="Bold" />

        <Grid Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3" Grid.RowSpan="2">
          <!--Padding="10"-->
          <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
          </Grid.RowDefinitions>
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
          </Grid.ColumnDefinitions>

          <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Text="Start date" HorizontalOptions="Center" TextColor="Black" FontAttributes="Bold" />
          <DatePicker Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" x:Name="StartDate" Date="{x:Static sys:DateTime.Now}" HorizontalOptions="Center" BackgroundColor="#666666">
            <DatePicker.Format>yyyy-MM-dd</DatePicker.Format>
            <DatePicker.MinimumDate>
              <sys:DateTime x:FactoryMethod="Parse">
                <x:Arguments>
                  <x:String>Jan 1 2016</x:String>
                </x:Arguments>
              </sys:DateTime>
            </DatePicker.MinimumDate>
            <DatePicker.MaximumDate>
              <sys:DateTime x:FactoryMethod="Parse">
                <x:Arguments>
                  <x:String>Dec 31 2017</x:String>
                </x:Arguments>
              </sys:DateTime>
            </DatePicker.MaximumDate>
          </DatePicker>

          <Label Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="2" Text="End date" HorizontalOptions="Center" TextColor="Black" FontAttributes="Bold" />
          <DatePicker Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2" x:Name="EndDate" Date="{x:Static sys:DateTime.Now}" HorizontalOptions="Center" BackgroundColor="#666666">
            <DatePicker.Format>yyyy-MM-dd</DatePicker.Format>
            <DatePicker.MinimumDate>
              <sys:DateTime x:FactoryMethod="Parse">
                <x:Arguments>
                  <x:String>Jan 1 2016</x:String>
                </x:Arguments>
              </sys:DateTime>
            </DatePicker.MinimumDate>
            <DatePicker.MaximumDate>
              <sys:DateTime x:FactoryMethod="Parse">
                <x:Arguments>
                  <x:String>Dec 31 2020</x:String>
                </x:Arguments>
              </sys:DateTime>
            </DatePicker.MaximumDate>
          </DatePicker>
        </Grid>
        
        <Button Grid.Row="9" Grid.Column="1" Text="Save" Clicked="Save" BackgroundColor="#cce6ff" FontFamily="Arial" FontAttributes="Bold" TextColor="Black" FontSize="20" />
        <Label Grid.Row="10" Grid.Column="0" Grid.ColumnSpan="3" HorizontalTextAlignment="Center" x:Name="SavedValues" IsVisible="True" HorizontalOptions="Center" FontFamily="Arial" FontAttributes="Bold" TextColor="Black" />
      </Grid>
    </ScrollView>
  </ContentPage.Content>
</ContentPage>